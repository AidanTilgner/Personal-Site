---
import Layout from "../../../layouts/Layout.astro";
import { ArrowLeft } from "@phosphor-icons/react";
---

<Layout title="Links">
  <main>
    <section>
      <a class="back-button" href="/stuff"><ArrowLeft /> All Stuff</a>
    </section>
    <section class="friends">
      <h1>Computers and Technical Stuff</h1>
      <ul>
        <li>
          <a href="https://youtu.be/TkwXa7Cvfr8" target="_blank"
            >Watching Neural Networks Learn</a
          > | <a href="https://www.youtube.com/@EmergentGarden" class="creator"
            >Emergent Garden</a
          >
        </li>
      </ul>
    </section>
    <section>
      <h1>Chemistry</h1>
      <ul>
        <li>
          <a href="https://youtu.be/6fuCYXU4McQ" target="_blank"
            >Which Neurotoxin is the Worst?</a
          > | <a href="https://www.youtube.com/@That_Chemist" class="creator"
            >That Chemist</a
          >
        </li>
      </ul>
    </section>
  </main>
</Layout>

<style lang="scss">
  main {
    padding: 1.4rem 2.4rem;
  }

  section {
    margin-bottom: 3.6rem;
  }

  h1 {
    font-size: 3.6rem;
    margin-bottom: 1.4rem;
  }

  ul {
    margin: 0;
  }

  li {
    margin-bottom: 0.8rem;
    font-size: 2.4rem;
    color: rgba(var(--text-color), 0.5);
  }

  a {
    color: rgba(var(--primary-color), 1);
  }

  .creator {
    color: rgba(var(--text-color), 0.75);
  }
</style>
