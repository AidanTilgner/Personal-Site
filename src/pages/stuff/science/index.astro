---
import Layout from "../../../layouts/Layout.astro";
import { ArrowLeft } from "@phosphor-icons/react";
import science from "./science.json";
const papers = science.papers;
---

<Layout title="Links">
  <main>
    <section>
      <a class="back-button" href="/stuff"><ArrowLeft /> All Stuff</a>
    </section>
    <section>
      <h2>Papers</h2>
      <ul>
        {
          papers.map((paper) => {
            return (
              <li>
                <a href={paper.link}>{paper.name}</a>
              </li>
            );
          })
        }
      </ul>
    </section>
  </main>
</Layout>

<style lang="scss">
  main {
    padding: 1.4rem 2.4rem;
  }

  section {
    margin-bottom: 3.6rem;
  }

  h1 {
    font-size: 3.6rem;
    margin-bottom: 1.4rem;
  }

  ul {
    margin: 0;
  }

  li {
    margin-bottom: 0.8rem;
    font-size: 2.4rem;
  }
</style>
