    <section>
      <a class="back-button" href="/stuff"><ArrowLeft /> All Stuff</a>
    </section>
    <section class="friends">
      <h1>Friend's Sites</h1>
      <ul>
        <li><a href="https://nimo.is" target="_blank">Nathan</a></li>
      </ul>
    </section>
    <section>
