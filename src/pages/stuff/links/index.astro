<style lang="scss">
  main {
    padding: 1.4rem 2.4rem;
  }

  section {
    margin-bottom: 3.6rem;
  }

  h1 {
    font-size: 3.6rem;
    margin-bottom: 1.4rem;
  }

  ul {
    margin: 0;
  }

