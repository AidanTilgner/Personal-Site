---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Primary from "../components/Buttons/Primary.svelte";
---

<Layout title="Aidan Tilgner">
  <main>
    <section class="hero">
      <div class="text">
        <h2>Hello there...</h2>
        <h2>I'm Aidan</h2>
        <p class="tagline">
          Software <span class="text-gradient">Developer</span>
        </p>
      </div>
      <div class="buttons">
        <Primary>Let's Talk</Primary>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    height: 100vh;
  }

  .text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 56px;
  }

  .text h2 {
    font-size: 36px;
    font-weight: 400;
    margin: 0;
    margin-bottom: 24px;
  }

  .tagline {
    font-size: 28px;
    font-weight: 400;
    margin: 0;
  }

  .buttons {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>
