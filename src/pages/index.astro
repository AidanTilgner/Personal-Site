---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience";
---

<Layout title="Home">
  <main>
    <section class="experience">
      <Experience client:load />
    </section>
  </main>
</Layout>

<style lang="scss">
  main {
    text-align: center;
    height: calc(100vh - 82px);
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .experience {
    width: 100%;
    height: 100%;
  }
</style>
