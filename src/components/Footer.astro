<style lang="scss">
  @use "../styles/mixins.scss" as *;

  footer {
    background-color: var(--background-color);
    color: #fff;
    padding: 2.4rem;
    padding-top: 3.6rem;
  }

  .content {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 2.4rem;
    margin-bottom: 5.6rem;

    @include desktop {
      grid-template-columns: 1fr 1fr;
    }
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    // border: 1px solid #fff;
    box-sizing: border-box;
    padding: 1.4rem 1.4rem;

    h4 {
      font-size: 2.2rem;
      font-weight: 500;
      margin: 0;
      padding: 0;
      margin-bottom: 2.4rem;
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;

      li {
        border-left: 0.2rem solid #fff;
        padding-inline-start: 1.4rem;
        transition: all 0.2s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin-bottom: 1.4rem;

        &:last-child {
          margin-bottom: 0;
        }

        &:hover {
          padding-inline-start: 1.8rem;
        }

        a {
          color: #fff;
          text-decoration: none;
          transition: all 0.2s ease-in-out;
          font-size: 1.6rem;

          &:hover {
            // font-weight: 500;
            text-decoration: underline;
          }
        }

        .with-icon {
          margin-left: 0.8rem;
        }
      }
    }
  }

  .acknowledgment {
    font-size: 1.4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0;

    p {
      margin: 0;
      padding: 0;
      margin-bottom: 1rem;
      font-weight: 500;
    }

    @include desktop {
      flex-direction: row;
      justify-content: center;

      p {
        margin-right: 1rem;
      }
    }
  }

  .copyright {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;

    span {
      font-weight: 500;
    }

    i {
      font-size: 1.4rem;
      margin-right: 0.4rem;
    }
  }
</style>
