---
import Footer from "@/components/Footer.astro";
import Nav from "@/components/Navigation/Nav.svelte";
import Chat from "@/components/Chat/Chat.svelte";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Software Developer, using the latest technologies to bring the world better services."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600&family=Inter:wght@100;200;300;400;500;600;700;800&family=Quicksand:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <script src="https://unpkg.com/phosphor-icons"></script>
    <title>Blog | {title}</title>
  </head>
  <body>
    <Chat client:load />
    <Nav client:load position={"bottomright"} />
    <div class="blog-content">
      <slot />
    </div>
    <Footer />
    <style lang="scss" is:global>
      @import "../styles/global.scss";

      .blog-content {
        padding: 36px 24px;
        text-align: left;

        @media (min-width: 768px) {
          padding: 36px 48px;
        }

        @media (min-width: 1024px) {
          padding: 36px 96px;
        }
      }

      h1 {
        font-size: 36px;
        font-weight: 500;
        padding-bottom: 14px;
        border-bottom: 1px solid #eaeaea;

        @media (min-width: 768px) {
          font-size: 48px;
        }
      }

      h2 {
        font-size: 24px;
        font-weight: 400;
        padding-bottom: 14px;
        border-bottom: 1px solid #eaeaea;

        @media (min-width: 768px) {
          font-size: 36px;
        }
      }

      h3 {
        font-size: 18px;
        font-weight: 400;
        padding-bottom: 14px;
        border-bottom: 1px solid #eaeaea;

        @media (min-width: 768px) {
          font-size: 24px;
        }
      }

      .metadata {
        font-size: 16px;
        font-weight: 400;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding-inline-start: 14px;
        margin: 24px 0;
        border-left: 2px solid #eaeaea;

        @media (min-width: 768px) {
          font-size: 20px;
          margin: 36px 0;
        }

        author {
          margin-bottom: 8px;
          font-weight: 500;
        }

        time {
          margin-right: 8px;
        }
      }

      .caption {
        font-size: 18px;
        font-weight: 500;
        margin: 24px 0;

        @media (min-width: 768px) {
          font-size: 20px;
          margin: 36px 0;
        }
      }

      p {
        font-size: 16px;
        font-weight: 400;
        margin: 24px 0;

        @media (min-width: 768px) {
          font-size: 20px;
          margin: 36px 0;
        }

        a {
          color: #000;
          text-decoration: none;
          border-bottom: 1px solid #000;
          transition: all 0.1s;

          &:hover {
            opacity: 0.5;
          }
        }
      }
    </style>
  </body>
</html>
